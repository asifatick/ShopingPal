@model ShoppingPal.Models.Shop

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Shop</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">LogoLocation</div>
    <div class="display-field">@Model.LogoLocation</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">Address</div>
    <div class="display-field">@Model.Address</div>

    <div class="display-label">Lat</div>
    <div class="display-field">@String.Format("{0:F}", Model.Lat)</div>

    <div class="display-label">Long</div>
    <div class="display-field">@String.Format("{0:F}", Model.Long)</div>

    <div class="display-label">Owner</div>
    <div class="display-field">@(Model.Owner == null ? "None" : Model.Owner.LastName)</div>

    <div class="display-label">Styles</div>
    <div class="display-field">@(Model.Styles == null ? "None" : Model.Styles.Count.ToString())</div>

    <div class="display-label">Items</div>
    <div class="display-field">@(Model.Items == null ? "None" : Model.Items.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


