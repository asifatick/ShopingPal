@model ShoppingPal.Models.ShopItems

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>ShopItems</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">ImageLocation</div>
    <div class="display-field">@Model.ImageLocation</div>

    <div class="display-label">Price</div>
    <div class="display-field">@String.Format("{0:F}", Model.Price)</div>

    <div class="display-label">Credit</div>
    <div class="display-field">@String.Format("{0:F}", Model.Credit)</div>

    <div class="display-label">IsCreditOnPercent</div>
    <div class="display-field">@Model.IsCreditOnPercent</div>

    <div class="display-label">Shop</div>
    <div class="display-field">@(Model.Shop == null ? "None" : Model.Shop.Name)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


