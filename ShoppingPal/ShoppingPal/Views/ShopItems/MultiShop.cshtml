@model List<ShoppingPal.Models.City>

@{
    ViewBag.Title = "MultiShop";
}

<h2>MultiShop</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@using (Html.BeginForm("MultiShop","ShopItems"))
{

    for (int i = 0; i < Model.Count;i++ )
    {
             <fieldset>
                <legend>Shop</legend>
        
         
                    <div class="display-label">Id</div>
            <div class="display-field">@Model[i].Id</div>

                 @Html.HiddenFor(model => model[i].Id)
                 
                 @Html.EditorFor(x=> x[i].Active)
                  
                <div class="editor-label">
                    @Html.LabelFor(model => model[i].Name)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model[i].Name)
                    @Html.ValidationMessageFor(model => model[i].Name)
                </div>
                 

            

       
            </fieldset>

    }
  <p>
            <input type="submit" value="Create" />
        </p>
}
