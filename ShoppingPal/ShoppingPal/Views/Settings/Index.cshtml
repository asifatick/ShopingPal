@model IEnumerable<ShoppingPal.Models.Settings>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            FacebookID
        </th>
        <th>
            Age
        </th>
        <th>
            BirthDay
        </th>
        <th>
            FavColor
        </th>
        <th>
            FavCollection
        </th>
        <th>
            Gender
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.FacebookID
        </td>
        <td>
			@item.Age
        </td>
        <td>
			@String.Format("{0:g}", item.BirthDay)
        </td>
        <td>
			@item.FavColor
        </td>
        <td>
			@item.FavCollection
        </td>
        <td>
			@item.Gender
        </td>
    </tr>
}

</table>


